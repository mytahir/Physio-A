    <Grid BackgroundColor="White">

                 <Image Source="aboutbg.jpg" Aspect="AspectFill" BackgroundColor="White"/>

        <ScrollView>

            <StackLayout Spacing="110" Margin="0,150,0,0" Grid.RowSpan="3">

                    
                <yummy:PancakeView  BackgroundColor="#33001A" Padding="11" Opacity=".8" CornerRadius="0,20,0,20" Margin="0,0,30,0" HeightRequest="120">
                           <StackLayout>
                        <Label  Text="Welcome to Physio A " TextColor="White" FontAttributes="Bold" FontSize="Large"/>
                        
                        <Label  Text="Your health your wealth " LineBreakMode="WordWrap" TextColor="White" FontAttributes="Bold" FontSize="Medium" />

                        <Label BackgroundColor="White" HeightRequest="2" WidthRequest="90" HorizontalOptions="StartAndExpand" />

                    </StackLayout> 
                    
                </yummy:PancakeView>

                <yummy:PancakeView BackgroundColor="#33001A" Padding="11" Opacity=".8" CornerRadius="20,0,20,0" Margin="30,0,0,0">
                    <StackLayout>
                        <Label Text="About Physio A" TextColor="White" FontSize="Large" FontAttributes="Bold"/>
                        <Label Text="Physio A provides you a Home Service that allows you to contact a Physiotherapist anytime you want in the comfort of your Home at an affordable price." 
                               TextColor="White" FontSize="Medium" LineBreakMode="WordWrap"/>
                    </StackLayout>
                </yummy:PancakeView>

                <yummy:PancakeView BackgroundColor="#33001A" Padding="11" Opacity=".8" CornerRadius="0,20,0,20" Margin="0,0,30,0"
                                   >
                    <StackLayout>
                        <Label Text="Physio A is a Physiotheraphy page for online Home Service Booking, we manage schedules and keeping track of all Information and treatment plan. Physio A allows Physiotherapists to focus on providing the book care to patients through efficient patient information management at the point of care. It provides all the information therapists need on a single platform while helping them manage their appointments efficiently from the comfort of their homes. we dont't only treat the symptoms but also the cause in other to prevent recurrence. Our treatment are based on scientific evidence best practice and we continually engage in professional developement to keep up to date." 
                               TextColor="White" FontSize="Medium" LineBreakMode="TailTruncation" MaxLines="30" HorizontalTextAlignment="Start"
                               x:Name="lblReadMore"/>

                        <material:MaterialButton Text="Read More >>" BackgroundColor="White" TextColor="Black" 
                                                 HorizontalOptions="StartAndExpand" x:Name="btnReadMore" Clicked="btnReadMore_Clicked"/>

                    </StackLayout>
                </yummy:PancakeView>

